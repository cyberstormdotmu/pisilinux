            <Dependency>libgcc</Dependency>
            <Dependency>fftw3</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/liblastfm_fingerprint*</Path>
        </Files>
    </Package>
    
