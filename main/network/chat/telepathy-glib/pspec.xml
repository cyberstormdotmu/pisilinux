    <Package>
        <Name>telepathy-glib</Name>
        <IsA>library</IsA>
        <Summary>GLib bindings for the Telepathy D-Bus protocol</Summary>
        <RuntimeDependencies>
            <Dependency>dbus</Dependency>
            <Dependency>glib2</Dependency>
            <Dependency>dbus-glib</Dependency>
        </RuntimeDependencies>
        <Files>
