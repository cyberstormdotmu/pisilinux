            <Dependency>zlib-devel</Dependency>
            <Dependency>openssl-devel</Dependency>
	    <!--Dependency>graphviz</Dependency-->
	    <Dependency>doxygen</Dependency>
	    <Dependency>cmake</Dependency>
        </BuildDependencies>
    </Source>

