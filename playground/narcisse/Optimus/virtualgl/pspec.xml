    <Package>
        <Name>virtualgl</Name>
        <RuntimeDependencies>
            <Dependency>fltk</Dependency>
            <Dependency>libXv</Dependency>
            <Dependency>libXext</Dependency>
            <Dependency>mesa</Dependency>
