            <AdditionalFile permission="0644" target="pisi.conf-x86_64">pisi.conf-x86_64</AdditionalFile>
        </AdditionalFiles>
        <BuildDependencies>
            <Dependency>comar</Dependency>
            <Dependency>plyvel</Dependency>
            <Dependency>python</Dependency>
            <Dependency>gettext</Dependency>
