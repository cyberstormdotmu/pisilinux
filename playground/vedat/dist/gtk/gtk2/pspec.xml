    <Package>
        <Name>gtk2</Name>
        <RuntimeDependencies>
            <Dependency>cups</Dependency>
            <Dependency>libXi</Dependency>
            <Dependency>cairo</Dependency>
            <Dependency>libXext</Dependency>
            <Dependency>libXrandr</Dependency>
