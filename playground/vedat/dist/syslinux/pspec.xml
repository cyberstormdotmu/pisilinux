        <Name>syslinux</Name>
        <RuntimeDependencies>
            <Dependency>mtools</Dependency>
            <Dependency>perl-Crypt-PasswdMD5</Dependency>
            <Dependency>perl-Digest-SHA1</Dependency>
        </RuntimeDependencies>
